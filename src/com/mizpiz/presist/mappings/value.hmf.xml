<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
    <class name="com.mizpiz.presist.obj.Value" table="VALUE">
        <id name="id" type="int" column="VAL_ID">
            <generator class="native"/>
        </id>
        <discriminator column="Value_TYPE" type="string"/>
        <subclass name="com.mizpiz.presist.obj.ImageVal" discriminator-value="IMAGE">
            <property name="value" type="java.sql.Blob"/>
            <one-to-one  name="property" class="com.mizpiz.presist.obj.Property"/>
        </subclass>
        <subclass name="com.mizpiz.presist.obj.MovieVal" discriminator-value="Movie">
            <property name="value" type="java.sql.Blob"/>
            <one-to-one  name="property" class="com.mizpiz.presist.obj.Property"/>
        </subclass>
        <subclass name="com.mizpiz.presist.obj.IntegerVal" discriminator-value="Long">
            <property name="value" type="long"/>
            <one-to-one  name="property" class="com.mizpiz.presist.obj.Property"/>
        </subclass>
        <subclass name="com.mizpiz.presist.obj.StringVal" discriminator-value="String">
            <property name="value" type="java.lang.String"/>
            <one-to-one  name="property" class="com.mizpiz.presist.obj.Property"/>
        </subclass>


    </class>

</hibernate-mapping>